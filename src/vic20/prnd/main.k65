//-------------------------------------------------------------------------------

[
  BLACK   = 0
  SPACE   = 0x20
]

//-------------------------------------------------------------------------------

var CLOCK=0xA2, RND=0xFB

var SCREEN_RAM=0x1E00, COLOR_RAM=0x9600, VIC=0x9000, TIMER1=0x9115, TIMER2=0x9126
    

//-------------------------------------------------------------------------------

func wait {
  c- a+CLOCK { a?CLOCK }!=
}

inline rsync {
  { a?VIC+4 }!=
}

inline clrscr {
  a=SPACE x=0 { SCREEN_RAM,x=a SCREEN_RAM+0x100,x=a x++ } !=
  a=BLACK { COLOR_RAM,x=a COLOR_RAM+0x100,x=a x++ } !=
}

//-------------------------------------------------------------------------------


func prnd {
  a=RND a^TIMER2+1 a<< a^VIC+4 a<<< a^CLOCK a+TIMER2 a<<< a^TIMER1 RND=a
}

//-------------------------------------------------------------------------------

main {
  clrscr

  {
    a=130 rsync
    prnd x=RND SCREEN_RAM,x=a=0
 
  } always
}

//-------------------------------------------------------------------------------
