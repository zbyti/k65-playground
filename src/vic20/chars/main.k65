//-------------------------------------------------------------------------------

[SPACE=0x20]

//-------------------------------------------------------------------------------

var SCREEN_RAM=0x1E00, COLOR_RAM=0x9600

var VIC_9000=0x9000,
    VIC_9001, VIC_9002, VIC_9003, VIC_9004, VIC_9005, VIC_9006,VIC_9007, VIC_9008,
    VIC_9009, VIC_900A, VIC_900B, VIC_900C, VIC_900D, VIC_900E, VIC_900F

//-------------------------------------------------------------------------------

func clear_screen {
  a=SPACE x=0 { SCREEN_RAM,x=a SCREEN_RAM+0x100,x=a x++ } !=
  a=x { COLOR_RAM,x=a COLOR_RAM+0x100,x=a x++ } !=
}


//-------------------------------------------------------------------------------

main {
  clear_screen

  x=0 { a=x SCREEN_RAM,x=a x++ } !=

  {} always
}


