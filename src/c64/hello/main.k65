-------------------------------------------------------------------------------

[SPACE=0x20]

-------------------------------------------------------------------------------

var SCREEN=0x400

-------------------------------------------------------------------------------

func clear_screen {
  a=SPACE x=0 { SCREEN,x=a SCREEN+0x100,x=a SCREEN+0x200,x=a SCREEN+0x300,x=a x++ } !=
}

-------------------------------------------------------------------------------

inline write_hello {
  x=0 {
    a=hello,x z-?{ SCREEN,x=a x++ }
  } z-?
}

-------------------------------------------------------------------------------

main {
  clear_screen write_hello return
}

-------------------------------------------------------------------------------

data text_data {
  charset ".ABCDEFGHIJKLMNOPQRSTUVWXYZ..... "

  hello: "HELLO WORLD" 0
}

