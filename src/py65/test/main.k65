  ESC      = 0x1B
]

/*
  RESET_TERMINAL => ESC "c"
  HOME           => ESC "[H"
  CLEAR          => ESC "[2J"
  HOME_AND_CLEAR => ESC "[H" ESC "[JP"
*/

//-----------------------------------------------------------------------------

var output=0xF001, input=0xF004

//-----------------------------------------------------------------------------

main {
  x=0xFF { x++ output=a=hello,x }!=
}

